<div id="memory-id-<%= memory.id %>" class="card bg-base-100 shadow-md">
  <figure>
    <%= image_tag "memory_placeholder.png",
      class: "h-48 w-full object-cover" %>
  </figure>

  <div class="card-body">
    <div class="flex items-start gap-2">
      <h2 class="card-title flex-1">
        <%= link_to memory.title, '#', class: "hover:underline" %>
      </h2>

      <div class="flex gap-2">
        <%= link_to '#',
          id: "button-edit-#{memory.id}",
          class: "btn btn-ghost btn-sm" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>

        <%= link_to '#',
          id: "button-delete-#{memory.id}",
          method: :delete,
          data: { confirm: '' },
          class: "btn btn-ghost btn-sm text-error" do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      </div>
    </div>

    <div class="flex items-center gap-4 text-sm text-base-content/70">
      <div class="flex items-center gap-1">
        <i class="bi bi-person"></i>
        <span><%= memory.user.name %></span>
      </div>

      <div class="flex items-center gap-1">
        <i class="bi bi-calendar"></i>
        <span><%= l memory.created_at, format: :short %></span>
      </div>
    </div>

    <p class="mt-2 text-sm">
      本文
    </p>
  </div>
</div>
