<div id="memory-id-<%= memory.id %>" class="card bg-base-100 w-96 shadow-sm gap-6">
  <figure>
  <div><%= image_tag memory.display_image %></div>
  </figure>

  <div class="card-body">
    <div class="flex items-start gap-2">
      <h2 class="card-title flex-1">
        <%= link_to memory.title, '#', class: "hover:underline" %>
      </h2>

      <div class="flex gap-2">
        <%= link_to '#',
          id: "button-edit-#{memory.id}",
          class: "btn btn-ghost btn-sm" do %>
          編集
        <% end %>

        <%= link_to '#',
          id: "button-delete-#{memory.id}",
          method: :delete,
          data: { confirm: '' },
          class: "btn btn-ghost btn-sm text-error" do %>
          削除
        <% end %>
      </div>
    </div>

    <div class="flex items-center gap-4 text-sm text-base-content/70">
      <div class="flex items-center gap-1">
        名前：
        <span><%= memory.user.name %></span>
      </div>

      <div class="flex items-center gap-1">
        日付：
        <span><%= l memory.created_at, format: :short %></span>
      </div>
    </div>

    <p class="mt-2 text-sm">
      本文
    </p>
  </div>
</div>
