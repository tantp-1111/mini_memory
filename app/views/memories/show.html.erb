<div class="max-w-3xl mx-auto px-4 py-6 space-y-6">

  <!-- タイトル -->
  <h1 class="text-2xl font-bold">
    <%= @memory.title %>
  </h1>

  <!-- 画像 -->
  <div class="w-full">
      <%= image_tag @memory.image, class: "rounded-lg w-full object-cover" %>
  </div>

  <!-- 日付 -->
    <div class="text-sm text-gray-500">
      <%= l(@memory.memory_date) %>
    </div>

  <!-- 本文 -->
  <div class="max-w-none">
      <%= simple_format(@memory.description) %>
  </div>

  <!-- 公開範囲 -->
  <div class="text-sm text-gray-600">
    <span class="font-semibold">公開範囲：</span>
    <%= t("enums.memory.visibility.#{@memory.visibility}") %>
  </div>

  <!-- 操作ボタン（本人のみ） -->
  <% if current_user == @memory.user %>
    <div class="flex gap-2 pt-4">
      <%= link_to "編集",
          edit_memory_path(@memory),
          id: "button-edit-memory-#{@memory.id}",
          class: "btn btn-outline btn-primary" %>

      <%= link_to "削除",
          memory_path(@memory),
          id: "button-delete-memory-#{@memory.id}",
          data: { turbo_method: :delete, turbo_confirm: t("defaults.delete_confirm") },
          class: "btn btn-outline btn-error" %>
    </div>
  <% end %>

</div>
